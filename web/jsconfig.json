 {
 "compilerOptions": {
    "target": "ES2022",
    "checkJs": false,
    "strict": true,
     "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "module": "ES2022",
    "skipLibCheck": true,
    "types": [
      "@arco-design/web-vue"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["src/components/*"],
      "@views/*": ["src/views/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
